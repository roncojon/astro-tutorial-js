---
import Social from "./Social.astro";
---

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-branding">
        <div class="footer-logo">Blog<span class="footer-logo-accent">CMS</span></div>
        <p class="footer-tagline">Modern blogging platform for creators</p>
      </div>
      
      <div class="footer-links">
        <div class="footer-links-column">
          <h3>Pages</h3>
          <a href="/">Home</a>
          <a href="/about/">About</a>
          <a href="/blog/">Blog</a>
          <a href="/tags/">Tags</a>
        </div>
        
        <div class="footer-links-column">
          <h3>Connect</h3>
          <div class="social-links">
            <Social platform="twitter" username="astrodotbuild" />
            <Social platform="github" username="withastro" />
            <Social platform="youtube" username="astrodotbuild" />
          </div>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">Â© {new Date().getFullYear()} BlogCMS. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--bg-main);
    border-top: 1px solid var(--border-color);
    padding: 3rem 0 1.5rem;
    margin-top: 3rem;
    width: 100%;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
  
  .footer-container {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 0 5%;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
  
  .footer-branding {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .footer-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary-700);
    transition: color 0.3s ease;
  }
  
  .footer-logo-accent {
    color: var(--color-accent-500);
    transition: color 0.3s ease;
  }
  
  .footer-tagline {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin: 0;
    transition: color 0.3s ease;
  }
  
  .footer-links {
    display: flex;
    gap: 2rem;
    justify-content: flex-end;
  }
  
  .footer-links-column {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .footer-links-column h3 {
    font-size: 1rem;
    margin-bottom: 0.75rem;
    color: var(--text-heading);
    transition: color 0.3s ease;
  }
  
  .footer-links-column a {
    font-size: 0.875rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-links-column a:hover {
    color: var(--color-primary-600);
  }
  
  .social-links {
    display: flex;
    gap: 0.75rem;
  }
  
  .footer-bottom {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    transition: border-color 0.3s ease;
  }
  
  .copyright {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 0;
    transition: color 0.3s ease;
  }
  
  /* Dark mode */
  :global(html.dark) .footer-logo {
    color: var(--color-primary-300);
  }
  
  :global(html.dark) .footer-links-column a:hover {
    color: var(--color-primary-400);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .footer-links {
      justify-content: flex-start;
    }
    
    .footer-container {
      padding: 0 1rem;
    }
  }
</style>
