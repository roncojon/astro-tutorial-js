---
import './navigation.css';
---

<div class="nav-links">
  <a href="/" class="nav-link">Home</a>
  <a href="/about/" class="nav-link">About</a>
  <a href="/blog/" class="nav-link">Blog</a>
  <a href="/tags/" class="nav-link">Tags</a>
  <a href="/signin?redirect=/post-editor/new" class="nav-link nav-link-cta">Create Post</a>
</div>

<style>
  .nav-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    color: var(--color-primary-900);
    font-weight: 500;
    font-size: 1rem;
    text-decoration: none;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.2s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--color-primary-500);
    transition: width 0.3s ease;
  }

  .nav-link:hover, .nav-link:focus {
    color: var(--color-primary-600);
  }

  .nav-link:hover::after, .nav-link:focus::after {
    width: 100%;
  }

  .nav-link-cta {
    background-color: var(--color-primary-500);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    transition: background-color 0.2s ease;
  }

  .nav-link-cta:hover, .nav-link-cta:focus {
    background-color: var(--color-primary-600);
    color: white;
  }

  .nav-link-cta::after {
    display: none;
  }

  /* Dark mode */
  :global(html.dark) .nav-link {
    color: var(--color-primary-100);
  }

  :global(html.dark) .nav-link:hover, 
  :global(html.dark) .nav-link:focus {
    color: var(--color-primary-300);
  }

  :global(html.dark) .nav-link::after {
    background-color: var(--color-primary-400);
  }

  /* Hamburger menu expanded state - mobile */
  :global(.nav-links.expanded) {
    display: flex !important;
    flex-direction: column;
    gap: 1rem;
    background-color: rgba(255, 255, 255, 0.98);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
    padding: 1.5rem;
  }

  :global(html.dark .nav-links.expanded) {
    background-color: rgba(15, 23, 42, 0.98);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .nav-links {
      display: none;
      position: absolute;
      top: 4rem;
      left: 1rem;
      right: 1rem;
      z-index: 100;
    }
  }
</style>

<script>
  // Toggle mobile menu
  document.addEventListener('astro:page-load', () => {
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');
    
    hamburger?.addEventListener('click', () => {
      navLinks?.classList.toggle('expanded');
    });
  });
</script>

